
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- DataTables CSS -->
    <link href="https://cdn.datatables.net/1.12.0/css/dataTables.bootstrap5.min.css" rel="stylesheet">

    <title>Solved Complaints</title>
    <style>
       
        
        .container {
            max-width: 1200px;
            margin: auto;
            background-color: #f0f3f7;
        }
        .card {
            /* border: none; */
            border-radius: 10px;
        }

        .card-header {
            background-color: #283848;
            color: #eeeeee;
            border-radius: 10px 10px 0 0;
            
        }

        .card-body {
            padding: 20px;
        }

        h1{
            color: rgb(244, 248, 249);
        }
        table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
    tr:nth-child(even) {
        background-color: #3a4450; /* Color for even rows */
    }
    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }
    </style>
   
</head>
<body>
<div id="success-message" class="alert alert-success" style="display: none;"></div>
<div class="container">
    <h1 class="mt-4 mb-4 text-center text-primary"><b><%=title%></b></h1>

    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col col-sm-9"><h1>Solved Complaints</h1></div>
                <div class="col col-sm-3">
                    <select id="filter-select" class="form-select mb-3">
                        <option value="">All</option>
                        <option value="Electricity">Electricity</option>
                        <option value="Cleaning">Cleaning</option>
                        <option value="Plumber">Plumber</option>
                        <option value="Electronic">Electronic</option>
                        <option value="Others">Others</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered" id="complaints-table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>UserName</th>
                            <th>Type Of Complaint</th>
                            <th>Problem</th>
                            <th>Description</th>
                            <th>Issued Date</th>
                           
                            
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Complaints will be dynamically added here -->
                        <% solved_complaints.forEach(function(complaint){ %>
                            <tr data-complaint-type="<%= complaint.type_of_complaint %>" class="complaint-row">
                                <td><%= complaint.id %></td>
                                <td><%= complaint.username %></td>
                                <td><%= complaint.type_of_complaint %></td>
                                <td><%= complaint.prblm %></td>
                                <td><%= complaint.description %></td>
                                <td><%= complaint.curdate%></td>
                                 
                                
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal for editing complaint -->
<div class="modal" tabindex="-1" id="action_modal">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Form for editing complaint -->
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>

<!-- Bootstrap Bundle JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.12.0/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.12.0/js/dataTables.bootstrap5.min.js"></script>

<!-- Custom JavaScript -->
<script>
$(document).ready(function() {
    // DataTable initialization
    $('#complaints-table').DataTable();

    // AJAX request to fetch complaints data
    $.ajax({
        url: '/action1',
        method: 'POST',
        data: { action: 'fetch' },
        dataType: 'json',
        success: function(data) {
            // Populate complaints table with data
            $.each(data.data, function(index, complaint) {
                if (complaint.username!==undefined){
                    $('#complaints-table tbody').append(`
                    <tr>
                        <td>${complaint.id}</td>
                        <td>${complaint.username}</td>
                        <td>${complaint.type_of_complaint}</td>
                        <td>${complaint.prblm}</td>
                        <td>${complaint.description}</td>
                        <td>${complaint.curdate}</td>
                        
                        
                    </tr>
                `);
                }
                
            });
        },
        error: function(err) {
            console.error('Error fetching complaints data:', err);
        }
    });

    // Filter complaints based on selected type
    $('#filter-select').change(function() {
        const filterValue = $(this).val();
        $('#complaints-table').DataTable().search(filterValue).draw();
    });

    
});
</script>

</body>
</html>
 
